{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "TestFile.cpp",
                "-o",
                "tests.out",
                "--debug",
                "-lfolly",
                "-lglog",
                "-lgtest",
                "-lgtest_main",
                "-lgmock",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lfolly",
                "-lglog",
                "-lgtest",
                "-lgmock",
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}